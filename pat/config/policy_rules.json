{
  "severity_thresholds": {
    "LOW": [0.0, 0.25],
    "MEDIUM": [0.25, 0.60],
    "HIGH": [0.60, 0.85],
    "VERY_HIGH": [0.85, 1.0]
  },

  "rules": [

    {
      "id": "credentials_any",
      "description": "Always mask authentication and secret material (highest risk).",
      "pii_types": ["CREDENTIAL", "PASSWORD", "PIN", "TOKEN", "API_KEY", "SESSION_ID"],
      "severity_at_least": "LOW",
      "action": {
        "decision": "MASK",
        "mask_strategy": "placeholder",
        "mask_args": { "placeholder": "<CREDENTIAL>" }
      },
      "priority": 100,
      "enabled": true
    },

    {
      "id": "financial_any",
      "description": "Mask all financial identifiers with a consistent placeholder.",
      "pii_types": ["BANK_ACCOUNT", "IBAN", "CARD_NUMBER", "SORT_CODE", "TRANSACTION_ID"],
      "severity_at_least": "LOW",
      "action": {
        "decision": "MASK",
        "mask_strategy": "placeholder",
        "mask_args": { "placeholder": "<FINANCIAL>" }
      },
      "priority": 95,
      "enabled": true
    },

    {
      "id": "customer_identifiers",
      "description": "Mask customer/loyalty identifiers separately from financial data.",
      "pii_types": ["CUSTOMER_ID"],
      "severity_at_least": "LOW",
      "action": {
        "decision": "MASK",
        "mask_strategy": "placeholder",
        "mask_args": { "placeholder": "<CUSTOMER_ID>" }
      },
      "priority": 94,
      "enabled": true
    },

    {
      "id": "government_ids",
      "description": "Mask all government-issued identifiers.",
      "pii_types": ["NI_NUMBER", "NHS_NUMBER", "PASSPORT_NUMBER", "DRIVING_LICENSE", "GOV_ID"],
      "severity_at_least": "LOW",
      "action": {
        "decision": "MASK",
        "mask_strategy": "placeholder",
        "mask_args": { "placeholder": "<GOV_ID>" }
      },
      "priority": 93,
      "enabled": true
    },

    {
      "id": "person_identity_mask",
      "description": "Mask personal names (stable semantic identity).",
      "pii_types": ["PERSON", "PERSON_NAME"],
      "severity_at_least": "LOW",
      "action": {
        "decision": "MASK",
        "mask_strategy": "placeholder",
        "mask_args": { "placeholder": "<PERSON>" }
      },
      "priority": 92,
      "enabled": true
    },

    {
      "id": "health_mask",
      "description": "Mask health and medical-related information.",
      "pii_types": ["MEDICAL_INFO", "MEDICATION", "DIAGNOSIS", "HOSPITAL", "HEALTH_CONTEXT"],
      "severity_at_least": "LOW",
      "action": {
        "decision": "MASK",
        "mask_strategy": "placeholder",
        "mask_args": { "placeholder": "<MEDICAL_INFO>" }
      },
      "priority": 92,
      "enabled": true
    },

    {
      "id": "dob_and_dates",
      "description": "Mask dates of birth or explicit dates when severity is HIGH or above.",
      "pii_types": ["DATE"],
      "severity_at_least": "HIGH",
      "action": {
        "decision": "MASK",
        "mask_strategy": "placeholder",
        "mask_args": { "placeholder": "<DATE>" }
      },
      "priority": 85,
      "enabled": true
    },

    {
      "id": "online_identifiers",
      "description": "Mask device and network identifiers.",
      "pii_types": ["IP_ADDRESS", "IPV6_ADDRESS", "MAC_ADDRESS", "DEVICE_ID", "COOKIE_ID", "TRACKING_ID"],
      "severity_at_least": "LOW",
      "action": {
        "decision": "MASK",
        "mask_strategy": "placeholder",
        "mask_args": { "placeholder": "<ONLINE_ID>" }
      },
      "priority": 91,
      "enabled": true
    },

    {
      "id": "url_mask_low",
      "description": "Mask URLs since query parameters may contain identifiers.",
      "pii_types": ["URL"],
      "severity_at_least": "LOW",
      "action": {
        "decision": "MASK",
        "mask_strategy": "placeholder",
        "mask_args": { "placeholder": "<URL>" }
      },
      "priority": 90,
      "enabled": true
    },

    {
      "id": "contact_medium_plus",
      "description": "Mask contact identifiers unless severity is LOW.",
      "pii_types": ["EMAIL", "PHONE", "SOCIAL_HANDLE"],
      "severity_at_least": "MEDIUM",
      "action": {
        "decision": "MASK",
        "mask_strategy": "placeholder",
        "mask_args": { "placeholder": "<CONTACT>" }
      },
      "priority": 70,
      "enabled": true
    },

    {
      "id": "contact_low_explicit_allow",
      "description": "Allow low-severity, low-risk contact information.",
      "pii_types": ["EMAIL", "PHONE"],
      "severity_in": ["LOW"],
      "action": { "decision": "ALLOW" },
      "priority": 25,
      "enabled": true
    },

    {
      "id": "address_location_mask",
      "description": "Mask physical addresses and postcodes.",
      "pii_types": ["ADDRESS", "POSTCODE"],
      "severity_at_least": "MEDIUM",
      "action": {
        "decision": "MASK",
        "mask_strategy": "placeholder",
        "mask_args": { "placeholder": "<ADDRESS>" }
      },
      "priority": 65,
      "enabled": true
    },

    {
      "id": "employment_mask",
      "description": "Mask employment/education identifiers.",
      "pii_types": ["EMPLOYER_NAME", "JOB_TITLE", "EMPLOYMENT_ID", "STUDENT_ID", "DEGREE"],
      "severity_at_least": "MEDIUM",
      "action": {
        "decision": "MASK",
        "mask_strategy": "placeholder",
        "mask_args": { "placeholder": "<EMPLOYMENT>" }
      },
      "priority": 64,
      "enabled": true
    },

    {
      "id": "location_activity_mask",
      "description": "Mask GPS, activity traces, or movement patterns.",
      "pii_types": ["GEO_COORDINATES", "TRAVEL_PLAN", "EVENT_CHECKIN", "ACTIVITY_PATTERN"],
      "severity_at_least": "LOW",
      "action": {
        "decision": "MASK",
        "mask_strategy": "placeholder",
        "mask_args": { "placeholder": "<LOCATION>" }
      },
      "priority": 63,
      "enabled": true
    },

    {
      "id": "allow_low_generic_number",
      "description": "Allow benign low-severity numeric values (non-sensitive).",
      "pii_types": ["GENERIC_NUMBER"],
      "severity_in": ["LOW"],
      "action": { "decision": "ALLOW" },
      "priority": 20,
      "enabled": true
    }
  ]
}
